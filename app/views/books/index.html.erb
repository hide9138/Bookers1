<body>
	<h1 class="head">Books</h1>

	<table>
	<tr>
		<th>Title</th> <th>Body</th>
	</tr>


	<% @books.each do |book| %>
	<tr>
		<td class="title"><%= book.title %></td>
		<td class="body"><%= book.body %></td>
		<td><%= link_to "show", book_path(book) %></td>
		<td><%= link_to "Edit", edit_book_path(book) %></td>
		<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure？" %></td>
	</tr>
	<% end %>
</table>

<h2 class="newhead">New book</h2>


<% if @book.errors.any?  %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>

<% end %>

</body>







